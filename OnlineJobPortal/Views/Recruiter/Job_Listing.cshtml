@{
    ViewBag.Title = "Jobs";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Job Posting</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .form-control, .form-select {
            padding: 4px 8px;
            font-size: 0.85rem;
            height: auto;
        }

        textarea.form-control {
            resize: none;
            height: 70px;
        }

        .btn {
            font-size: 0.85rem;
        }

        .modal-card {
            border: 1px solid #dee2e6;
            border-radius: 8px;
            overflow: hidden;
        }

        .modal-card-header {
            background-color: #0d6efd;
            color: white;
            padding: 0.75rem;
        }

        .modal-card-body {
            padding: 1rem;
        }
    </style>
</head>
<body>
    <div class="container mt-3">
        <!-- Trigger Modal -->
        <div class="d-flex justify-content-center">
            <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#jobModal">
                Post a Job
            </button>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="jobModal" tabindex="-1" aria-labelledby="jobModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content modal-card">
                    <div class="modal-card-header">
                        <h1 class="text-center fs-5">Post a Job</h1>
                    </div>
                    <div class="modal-card-body">
                        <form action="/submit-job" method="POST">
                            <div class="row g-3">
                                <!-- Job ID -->
                                <div class="col-12">
                                    <label for="jobId" class="form-label">Job ID:</label>
                                    <input type="text" class="form-control" id="jobId" name="jobId" required>
                                </div>

                                <!-- Hidden Recruiter ID -->
                                <input type="hidden" id="recruiterId" name="recruiterId">

                                <!-- Job Title -->
                                <div class="col-12">
                                    <label for="jobTitle" class="form-label">Job Title:</label>
                                    <input type="text" class="form-control" id="jobTitle" name="jobTitle" required>
                                </div>

                                <!-- Company Name -->
                                <div class="col-12 col-md-6">
                                    <label for="companyName" class="form-label">Company Name:</label>
                                    <input type="text" class="form-control" id="companyName" name="companyName" required>
                                </div>

                                <!-- Job Location -->
                                <div class="col-12 col-md-6">
                                    <label for="jobLocation" class="form-label">Job Location:</label>
                                    <input type="text" class="form-control" id="jobLocation" name="jobLocation" required>
                                </div>

                                <!-- Job Type -->
                                <div class="col-12 col-md-6">
                                    <label for="jobType" class="form-label">Job Type:</label>
                                    <select class="form-select" id="jobType" name="jobType" required>
                                        <option value="Full-time">Full-time</option>
                                        <option value="Part-time">Part-time</option>
                                        <option value="Contract">Contract</option>
                                        <option value="Internship">Internship</option>
                                    </select>
                                </div>

                                <!-- Salary -->
                                <div class="col-12 col-md-6">
                                    <label for="salary" class="form-label">Salary:</label>
                                    <input type="number" class="form-control" id="salary" name="salary" required>
                                </div>

                                <!-- Description -->
                                <div class="col-12">
                                    <label for="description" class="form-label">Description:</label>
                                    <textarea class="form-control" id="description" name="description" required></textarea>
                                </div>

                                <!-- Posted Date -->
                                <div class="col-12 col-md-6">
                                    <label for="postedDate" class="form-label">Job Posted Date:</label>
                                    <input type="date" class="form-control" id="postedDate" name="postedDate" required>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="d-grid mt-3">
                                <button type="submit" class="btn btn-primary btn-sm">Post Job</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
