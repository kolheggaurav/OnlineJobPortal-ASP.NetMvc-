@model List<OnlineJobPortal.Models.Registration>

@{
    ViewBag.Title = "TotalUser";
}


<style>
    body {
        font-family: 'Poppins', Arial, sans-serif;
        background-color: #f4f7fa;
        margin: 0;
        padding: 0;
        color: #333;
    }

    h2 {
        text-align: center;
        font-size: 32px;
        font-weight: 700;
        margin: 20px 0;
        color: #4A4A4A;
    }

    .container {
        max-width: 1100px;
        margin: 30px auto;
        background-color: #ffffff;
        border-radius: 15px;
        padding: 25px 30px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    }

    .alert-message {
        text-align: center;
        color: #28a745;
        font-size: 16px;
        font-weight: 600;
    }

    .search-bar {
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
    }

        .search-bar input[type="text"] {
            width: 400px;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 8px 0 0 8px;
            font-size: 16px;
            color: #333;
        }

        .search-bar button {
            padding: 10px 20px;
            background-color: #007bff;
            color: #ffffff;
            border: none;
            border-radius: 0 8px 8px 0;
            font-size: 16px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .search-bar button:hover {
                background-color: #0056b3;
            }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        font-size: 16px;
    }

        table th {
            background-color: #007bff;
            color: #ffffff;
            text-align: left;
            padding: 12px;
            font-weight: bold;
            text-transform: uppercase;
        }

        table td {
            padding: 12px;
            border-bottom: 1px solid #ddd;
            color: #555;
        }

        table tbody tr:nth-child(odd) {
            background-color: #f8f9fa;
        }

        table tbody tr:nth-child(even) {
            background-color: #ffffff;
        }

        table tbody tr:hover {
            background-color: #e9f7fe;
        }

        table td a {
            color: #007bff;
            text-decoration: none;
            font-weight: bold;
        }

            table td a:hover {
                color: #0056b3;
                text-decoration: underline;
            }

    footer {
        margin-top: 30px;
        text-align: center;
        color: #888;
        font-size: 14px;
    }
</style>

<div class="container">
    <h2>Manage Users</h2>

    @if (TempData["Message"] != null)
    {
        <p class="alert-message">@TempData["Message"]</p>
    }

    <!-- Search bar -->
    <div class="search-bar">
        <form method="get" action="/Admin/TotalUser">
            <input type="text" name="searchEmail" placeholder="Search by email" value="@Request.QueryString["searchEmail"]" />
            <button type="submit">Search</button>
        </form>
    </div>

    <!-- User table -->
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Password</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserID</td>
                    <td>@user.Email</td>
                    <td>@user.password</td>
                    <td>@user.your_Role</td>
                    <td>
                        <a href="/Admin/EditUser/@user.UserID">Edit</a> |
                        <a href="/Admin/DeleteUser/@user.UserID" onclick="return confirm('Are you sure you want to delete this user?')">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<footer>
    &copy; 2025 Online Job Portal. All rights reserved.
</footer>