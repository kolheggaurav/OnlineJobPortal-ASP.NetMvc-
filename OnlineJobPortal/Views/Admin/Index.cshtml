    <script>
    function logoutAndRedirect() {
        // Submit the logout form
        this.close();
        document.getElementById('logoutForm').submit();

        // After submitting, close the current window and redirect
        setTimeout(() => {
            window.open('@Url.Action("Index", "Home")', '_self');
            window.close();
        }, 500); // Add a slight delay to ensure logout processing
    }
    </script>

